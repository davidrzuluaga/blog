<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-md-2">
      <div class="content">
      <p><%= link_to "Volver", posts_path %></p>
          <h1><%=@post.title%></h1>
          <%= markdown(@post.body) %>
      </div>
      <div class="comments">
        <% @post.comments.each do |comment| %>
        <div class="card">
          <div class="card-header">
            <%= comment.user.email %> coment√≥ hace <%= comment.created_at %>
          </div>
          <div class="card-body">
            <p><%= markdown(comment.content)%></p>
          </div>
        </div>
        <% end%>

      </div>
    </div>
  </div>
</div>