<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
    
        <% if @post.errors.any? %>
          <div class="alert alert-danger">
            <ul>
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el titulo" %>
        </div>
        <div class="form-group">
          <%= f.text_area :body, class:"form-control", id:"FormControlTextarea1", rows:"10", placeholder: "Ingresa el contenido" %>
        </div>
        <div>
          <%= f.submit class:"btn"%>
        </div>
      <% end %>
    </div>
  </div>
</div>